{{!< default }}

<div class="contact">
    <img src="{{post.feature_image}}" alt="background image" class="contact__background" draggable="false" ondragstart="return false;">
    <div class="contact__box">

        <div class="contact__box--white">
            <h2 class="contact__header--primary">{{post.title}}</h2>

            <form action="https://formspree.io/hjarn.borberg@cphfacilitation.dk" method="POST" class="contact__form">
                <div class="contact__input-box">
                    <input type="text" class="contact__input" placeholder="Indtast Navn" name="Navn" required>
                    <input type="email" class="contact__input" placeholder="Indtast Email" name="Email" required>
                </div>
                <textarea name="Besked" class="contact__textarea" placeholder="Skriv en besked" cols="30" rows="10" required></textarea >
                <button class="contact__submit button button--white" type="submit">Send</button>
            </form>
        </div>
        <div class="contact__box--green">
            <h2 class="contact__header--primary sidebar">Information</h2>
            <div class="contact__info">
                {{post.excerpt}}
            </div>

            <!-- Begin Mailchimp Signup Form -->
            <div id="mc_embed_signup">
            <form action="https://cphfacilitation.us20.list-manage.com/subscribe/post?u=e1af266e69cb054127e1c3a3c&amp;id=9cfc0172db" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                <div id="mc_embed_signup_scroll">
                <h3 class="mailchimp__header">Hold dig opdateret!</h3>
                <p>Tilmeld dig vores nyhedsbrev og få senest nyt direkte til din mail</p>
                <div class="mc-field-group">
                    <label for="mce-EMAIL" class="mailchimp__header visuallyhidden">Din mailadresse</label>
                    <input type="email" value="" name="EMAIL" class="required email contact__input" id="mce-EMAIL" placeholder="Skriv din mailadresse" required> 
                </div>
                <div id="mce-responses" class="clear">
                    <div class="response" id="mce-error-response" style="display:none"></div>
                    <div class="response" id="mce-success-response" style="display:none"></div>
                </div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_e1af266e69cb054127e1c3a3c_9cfc0172db" tabindex="-1" value=""></div>
                <div class="clear"><input type="submit" value="Tilmeld mig nyhedsbrevet" name="subscribe" id="mc-embedded-subscribe" class="button button--green"></div>
                </div>
            </form>
            </div>
            <!--End mc_embed_signup-->
            
            <h3 class="contact__header--secondary">Besøg os på</h3>
            <ul class="contact__list">
                <li class="contact__item">
                    <div class="icon--white">
                        <a href="https://dk.linkedin.com/company/cphfacilitation">{{> "icons/linkedin"}}</a>
                    </div>    
                </li>
            </ul>
        </div>
    </div>
</div>

{{{block "scripts"}}}