{{!< default}}

<main class="site-main">
    <header class="nyheder__header">
        <h1>Nyheder</h1>
    </header>
    
    <section class="nyheder">
        {{#get "posts" limit=@config.posts_per_page filter="tags:nyhed" include="tags" as |nyhed|}}
        {{#foreach nyhed}}
        <article class="nyheder__item nyheder__item--{{@number}}">
            {{> "image-box"}}
        </article>
        {{/foreach}}
        {{/get}}
    </section>
</main>
