<nav class="pagination" role="navigation">
      {{#if prev}}
        <a class="newer-posts" href="{{page_url prev}}">{{> "icons/arrow-left"}}</a>
    {{/if}}
    <span class="page-number">{{page}} of {{pages}}</span>
    {{#if next}}
        <a class="older-posts" href="{{page_url next}}">{{> "icons/arrow-right"}}</a>
    {{/if}}
</nav>