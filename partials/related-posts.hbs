
{{#get "posts" limit="5" filter="tags:[{{post.tags}}]+tags:nyhed+id:-{{post.id}}" include="tags" as |related|}}
    {{#if related}}
        <h2 class="related-posts__header">Relaterede nyheder</h2>
    {{/if}}
    {{#foreach related}}
        <div class="related-posts__post">
            {{> "image-box"}}
        </div>
    {{/foreach}}
    {{else}}
    <p>Ingen relaterede nyheder</p>
{{/get}}
